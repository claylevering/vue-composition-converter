{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "types": ["vite/client"],
        "paths": {
            "@lib/*": ["./src/lib/*"],
            "@components/*": ["./src/components/*"]
        }
    },
    "include": ["**/*.js"],
    "exclude": ["node_modules", "samples", "temp", "tmp"]
}
